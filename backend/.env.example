# Example environment variables for Santa Wishlist Application
# Copy this to .env and fill in your values

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/santa

# Auth
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key
GPT_MODEL=gpt-4o
GPT_EXTRACTION_MODEL=gpt-4o-mini

# Email - Incoming (POP3)
POP3_SERVER=pop.gmail.com
POP3_PORT=995
POP3_USE_SSL=true
POP3_USERNAME=santa@yourdomain.com
POP3_PASSWORD=your-email-password

# Email - Outgoing (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=santa@yourdomain.com
SMTP_PASSWORD=your-email-password
SANTA_EMAIL_ADDRESS=santa@yourdomain.com
SANTA_DISPLAY_NAME=Santa Claus

# Task Queue (Redis)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email fetch interval in seconds
EMAIL_FETCH_INTERVAL=60

# Invite-only registration (generate with: python invite_cli.py generate-keys -o invite)
# INVITE_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"
