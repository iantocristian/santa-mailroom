# Example environment variables for Santa Wishlist Application
# Copy this to .env and fill in your values

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/santa

# Auth
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key
GPT_MODEL=gpt-4o
GPT_EXTRACTION_MODEL=gpt-4o-mini
GPT_SAFETY_MODEL=gpt-4o-mini
EMAIL_SAFETY_CHECK_ENABLED=true

# Email - Incoming (POP3)
POP3_SERVER=pop.gmail.com
POP3_PORT=995
POP3_USE_SSL=true
POP3_USERNAME=santa@yourdomain.com
POP3_PASSWORD=your-email-password

# Email - Outgoing (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=santa@yourdomain.com
SMTP_PASSWORD=your-email-password
SANTA_EMAIL_ADDRESS=santa@yourdomain.com
SANTA_DISPLAY_NAME=Santa Claus

# Worker settings
WORKER_POLL_INTERVAL=5
EMAIL_FETCH_INTERVAL=60

